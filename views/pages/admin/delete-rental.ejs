<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kagi (admin) - Delete Rental</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
<div class='main'>
    <%- include("../../partials/header.ejs") %>
    <%- include("../../partials/navbar.ejs") %>

    <div class='app'>
        <h2>Current Rentals</h2>
        <table>
            <tr><th>Rental ID</th><th>User ID</th><th>Book ID</th><th>Due Date</th></tr>
            <%- Array.from(rentals.entries()).map(([uId, rents]) => {

                return rents.map(({bookId, dueDate}) => `<tr>
                    <td>
                        <span>${uId}-${bookId}</span>
                    </td>
                    <td>
                        <a href="/app/user/${uId}">${uId}</a>
                    </td>
                    <td>
                        <a href="/app/book/${bookId}">${bookId}</a>
                    </td>
                    <td>${dueDate}</td>
                </tr>`);
            }).join(''); %>
        </table>

        <h2>Delete Rental</h2>
        <form method="post" action="/api/delete-rental">
            <div class="delete-book-form">
                <div><label>Rental ID: <input type="text" name="target"></label></div>
                <button type="submit" class="login-button">Delete Rental</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
